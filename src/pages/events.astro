---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

// 获取所有已发布的活动（draft: false 且日期早于当前时间）
const publishedEvents = await getCollection("events", ({ data }) => {
  console.log('data', data.draft,data.publishDate,new Date())
  console.log('publishedEvents',!data.draft && data.publishDate < new Date())
  return !data.draft && data.publishDate < new Date();
});

console.log('publishedEvents',publishedEvents)

// 按活动时间倒序排列
publishedEvents.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout title="Events">
  <Container>
    <Sectionhead>
      <Fragment slot="title">活动讯息</Fragment>
      <Fragment slot="desc">
        我们的最新活动与讯息，欢迎报名参与。
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {
          publishedEvents.map((eventEntry, index) => (
            <li>
              <a href={`/events/${eventEntry.slug}`}>
                <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                  {/* 可根据需要添加图片字段 */}
                  {eventEntry.data.image && (
                    <img
                      src={eventEntry.data.image.src}
                      alt={eventEntry.data.image.alt}
                      class="w-full rounded-md object-cover object-center bg-white"
                      width={800}
                      height={600}
                      loading={index <= 2 ? "eager" : "lazy"}
                      decoding={index <= 2 ? "sync" : "async"}
                    />
                  )}
                  <div>
                    <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                      {eventEntry.data.category}
                    </span>
                    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1">
                      {eventEntry.data.title}
                    </h2>
                    <div class="flex gap-2 mt-3">
                      <span class="text-gray-400">
                        {eventEntry.data.author}
                      </span>
                      <span class="text-gray-400">•</span>
                      <time
                        class="text-gray-400"
                        datetime={eventEntry.data.publishDate.toISOString()}>
                        {eventEntry.data.publishDate.toLocaleDateString()}
                      </time>
                    </div>
                  </div>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
