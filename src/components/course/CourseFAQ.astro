---
export interface Props {
  faqs: { question: string, answer: string }[]
}
const { faqs } = Astro.props
---

<!-- 课程常见问题组件 -->
<section class="mt-16">
  <h2 class="text-2xl font-bold mb-4">课程提问</h2>
  {faqs.map((faq, idx) => (
    <div class="mb-6">
      <h3 class="font-semibold text-lg mb-1">Q{idx + 1}：{faq.question}</h3>
      <p class="text-gray-700">{faq.answer}</p>
    </div>
  ))}
</section>
